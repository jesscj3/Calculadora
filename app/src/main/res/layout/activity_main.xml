<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.jessicaurrego.calculadora.MainActivity">

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="487dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bteliuno"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="<---"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btsen"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="sen"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btcos"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="coseno"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bttan"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="tan"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bteli"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1.58"
                    android:text="C"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btporce"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="%"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btele"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="x^n"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btdiv"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="/"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btsiete"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btocho"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnueve"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btpor"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="*"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btcuatro"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btcinco"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btseis"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btmas"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="+"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btuno"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btdos"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bttres"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btmenos"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btcero"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="0"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btpunto"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_weight="0.20"
                    android:text="."
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btigual"
                    android:layout_width="176dp"
                    android:layout_height="60dp"
                    android:layout_weight="0.20"
                    android:text="="
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
